#include <stdio.h>
int main(void) {
    int a, b, c, d = 0, result;
    scanf("%d %d %d", &a, &b, &c);
    if (a == b &&b == c&&c==a) {
        result = 10000 + a * 1000;
    }
    else if (a == b || a == c) {
        result = 1000 + a * 100;
    }
    else if (b == c) {
        result = 1000 + b * 100;
    }
    else {
        if (a > d) {
            d = a;
        }
        if (b > d) {
            d = b;
        }
        if (c > d) {
            d = c;
        }
        result = d * 100;
    }
    printf("%d", result);
}
