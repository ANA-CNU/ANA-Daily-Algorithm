#include <stdio.h>

int main()
{
	unsigned int T, to, end,result;
	unsigned int j=1,jj=1,a=0,count=0;
	scanf("%d", &T);
	for (unsigned int i = 0; i < T; i++) {
		scanf("%d %d", &to, &end);
		result = end - to;
		j = 1;
		jj = 1; // 제곱근
		while (j < result) {
			j = jj * jj;
			if ((jj + 1) * (jj + 1) > result)
				break;
			else
				jj++;
		}

		count = 2*jj-1;

		if (result == j)
			printf("%d\n", count);
		else if (result <= j + jj)
			printf("%d\n", count + 1);
		else
			printf("%d\n", count + 2);
	}

	return 0;
}
